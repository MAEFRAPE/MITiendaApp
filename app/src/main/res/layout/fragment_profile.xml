<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragmentos.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/Image_size"
        android:layout_height="@dimen/Image_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/fab_margin"
        app:layout_constraintBottom_toTopOf="@+id/profile_name"
        app:layout_constraintVertical_chainStyle="packed"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundeImage"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/purple_700"
        />
    <TextView
        android:id="@+id/profile_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/profile_image"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/SubTitle"
        android:text="Manuel Franco"
        app:layout_constraintBottom_toTopOf="@+id/profile_email"
        />
    <TextView
        android:id="@+id/profile_email"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/profile_image"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/SubTitle"
        android:text="2244555"
        app:layout_constraintBottom_toTopOf="@+id/profile_tel"
        />
    <TextView
        android:id="@+id/profile_tel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/profile_image"
        app:layout_constraintTop_toBottomOf="@id/profile_email"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/SubTitle"
        android:text="gdgdgd@hotmail.com"
        app:layout_constraintBottom_toTopOf="@+id/profile_log_out"
        />
    <Button
        android:id="@+id/profile_log_out"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/profile_image"
        app:layout_constraintTop_toBottomOf="@id/profile_tel"
        android:textSize="@dimen/SubTitle"
        android:text="@string/log_out"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>