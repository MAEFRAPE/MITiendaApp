<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragmentos.DetailProductFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/titulo_Detalle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/fab_margin"
        android:textSize="@dimen/title_size"
        tools:text="Mi Tienda"
        android:textStyle="bold"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/detalle_image"
        android:layout_width="@dimen/Image_size"
        android:layout_height="@dimen/Image_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toBottomOf="@+id/titulo_Detalle"
        android:layout_marginTop="@dimen/fab_margin"
        />

    <TextView
        android:id="@+id/detalle_descripcion"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="@id/detalle_image"
        app:layout_constraintLeft_toLeftOf="@id/detalle_image"
        app:layout_constraintTop_toBottomOf="@id/detalle_image"
        android:textSize="12dp"
        android:layout_marginTop="@dimen/fab_margin"
        tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
        />

</androidx.constraintlayout.widget.ConstraintLayout>